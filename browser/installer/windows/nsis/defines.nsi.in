!define AppVersion            "@APP_VERSION@"
!define GREVersion            @MOZILLA_VERSION@
!define AB_CD                 "@AB_CD@"

!define FileMainEXE           "@MOZ_APP_NAME@.exe"
!define WindowClass           "FirefoxMessageWindow"
